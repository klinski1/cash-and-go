{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
        "figma:asset/*": ["assets/*"]
      },
      "types": ["vite/client"]
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "dist"]
  }